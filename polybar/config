[colors]
bg        =   ${xrdb:color0}
bg-alt    =   #271c24
fg        =   ${xrdb:color15}
fg-alt    =   ${xrdb:color8}
red       =   ${xrdb:color1}
green     =   ${xrdb:color2}
yellow    =   ${xrdb:color3}
orange    =   ${xrdb:color9}
blue      =   ${xrdb:color4}
blue-alt  =   ${xrdb:color12}
magenta   =   ${xrdb:color5}
cyan      =   ${xrdb:color6}
white     =   ${xrdb:color7}
white-alt =   ${xrdb:color15}

[bar/example]
monitor = ${env:MONITOR:VGA-1}
width = 100%
height = 30
fixed-center = false

background = ${colors.white-alt}
foreground = ${colors.blue}

line-size = 3

padding-right = 0

module-margin-left = 0
module-margin-right = 0

modules-left = i3
modules-center = music
modules-right = pomodoro pkg pavolume xkeyboard memory cpu temperature powermenu date openweathermap

tray-position = right
tray-padding = 2
tray-background = ${colors.fg-alt}
tray-scale = 1.0
tray-maxsize = 22
;tray-transparent = true

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

font-0 = Fira Sans:size=10:weight=bold;2
font-1 = FuraMonoForPowerline Nerd Font:weight=regular:size=17;3
font-2 = FuraCode Nerd Font:weight=regular:size=14;3
font-3 = Weather Icons:size=12;3

[global/wm]
margin-top = 5
margin-bottom = 5

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "  "
format-prefix-foreground = ${colors.blue}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.red}
label-indicator-foreground = ${colors.white}
label-indicator-underline = ${colors.red}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
fuzzy-match = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

format-font = 0

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.fg-alt}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.white-alt}
label-focused-background = ${colors.orange}
label-focused-underline = ${colors.orange}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-foreground = ${colors.blue}
label-visible-background = ${colors.fg-alt}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.red}
label-urgent-padding = 3

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.blue}
label = %percentage%% %{F#268db2}|%{F-}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " %{F#268db2}|%{F-}  "
format-prefix-foreground = ${colors.blue}
label = %percentage_used%% %{F#268db2}|%{F-}

[module/date]
type = internal/date
interval = 5

date =  %A, %b. %d
time =  %H:%M
label = %date% %time%
label-font = 1
format-foreground = ${colors.white-alt}
format-background = ${colors.fg-alt}
format-prefix-foreground = ${colors.fg-alt}
format-padding = 2

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-foreground = ${colors.blue}

label = %temperature-c% %{F#268db2}|%{F-}
label-warn = %temperature-c% %{F#268db2}|%{F-}
label-warn-foreground = ${colors.red}

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-foreground = ${colors.blue}

[module/pkg]
type = custom/script
interval = 600
format = <label>
label = %{F#268db2}|%{F-} %output% %{F#268db2}|%{F-}
exec = ~/.config/polybar/checkupdate.sh
exec-if = "ping -q -w 2 -c 1 8.8.8.8 > /dev/null"

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = "  "
label-open-foreground = ${colors.blue}
label-close =  cancel
label-close-foreground = ${colors.blue}
label-separator = |
label-separator-foreground = ${colors.blue}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/music]
type = custom/script
interval = 0.5

label = %output:0:70:...%
exec = ~/.config/polybar/mpris.sh

click-left = playerctl play-pause
scroll-down = playerctl previous
scroll-up = playerctl next

[module/pavolume]
type = custom/script
interval = 0.5
label = " %output% %{F#268db2}|%{F-}"
exec = ~/.config/polybar/pavolume.sh
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

[module/pomodoro]
type = custom/script
; Use pomodoro glyphs in Nerd fonts
exec = pymodoro --break-prefix " " --pomodoro-prefix " " --pomodoro  --empty  --break  --length 5
; Use default symbols
;exec = pymodoro --length 5
label = "%output% "
label-font = 3
tail = true
interval = 0
; Start or reset the timer
click-left = if [ -e ~/.pomodoro_session ]; then rm ~/.pomodoro_session; else echo "25 5" > ~/.pomodoro_session; fi
; Increase pomodoro time
click-right = echo "$((`cut .pomodoro_session -d ' ' -f 1`+5)) 5" > .pomodoro_session
; Reduce pomodoro time
click-middle = echo "$((`cut .pomodoro_session -d ' ' -f 1`-5)) 5" > .pomodoro_session

[module/openweathermap]
type = custom/script
exec = ~/.config/polybar/openweathermap.sh
interval = 600
format-foreground = ${colors.white-alt}
format-background = ${colors.fg-alt}
format-prefix-foreground = ${colors.fg-alt}
format-padding = 2

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

